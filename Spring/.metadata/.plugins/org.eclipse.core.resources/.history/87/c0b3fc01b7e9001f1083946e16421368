	// CSS 선택자 이용
	$(function() {
		$("h1").click(() => { // <h1>태그를 클릭했을때 어떤 함수가 발동
			alert("우우우우우우우우우~~~");
		});
		$("h2").click(function() {
			alert("와아아아아아아아아~~~");
		});
		
		// 스위치 기능
		let b = false;
		$("h3").click(() => {
			b = !b;
			alert(b);
		});
		
		
		let iInput = $("#i");
		alert(iInptu);
		
		
		
		
	});
	
