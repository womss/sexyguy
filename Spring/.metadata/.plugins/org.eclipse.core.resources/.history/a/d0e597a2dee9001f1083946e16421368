<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript" src="jQuery.js"></script>
<script type="text/javascript">
	$(function() {
		// ㅋㅋㅋㅋㅋ => 글자색 : green / 배경색 : red
		// ㅎㅎㅎㅎㅎ => 글자색 : yellow / 배경색 : blue
		// ㅠㅠㅠㅠㅠ => 글자색 : pink / 배경색 : teal
		
		let arrobj = [
			{color: "green", bgc: "red" },
			{color: "yellow", bgc: "blue" },
			{color: "pink", bgc: "teal" }
			];
		
		$("td").each(function(i, t) {
			$(t).css("color", arrobj[i].color);
			$(t).css("background-color", arrobj[i].bgc);
		});
		
		// setInterval()을 이용해서
		// 처음시작사진 ~ 끝사진까지 한장씩 넘겨가면서 보여주기
		// 마지막사진을 출력하면 => 다시 처음부터 시작하게!
		
		let i = 0;
		setInterval(() => {
			i++;
			if (i == 23) {
				i = 0;
			}
			$("img").attr("src", "p" + i + ".jpg");
		}, 100);
	});
</script>
</head>
<body>
	<table>
		<tr>
			<td>ㅋㅋㅋㅋㅋ</td>
		</tr>
		<tr>
			<td>ㅎㅎㅎㅎㅎ</td>
		</tr>
		<tr>
			<td>ㅠㅠㅠㅠㅠ</td>
		</tr>
	</table>
	<hr>
	<img>
</body>
</html>