package com.beaver.feb122;

import java.text.DateFormat;
import java.util.Date;
import java.util.Locale;

import javax.servlet.http.HttpServletRequest;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.beaver.feb122.student.Student;
import com.beaver.feb122.student.StudentDAO;

@Controller
public class HomeController {
	
	@Autowired
	private StudentDAO sDAO;
	
	@RequestMapping(value = "/student.reg", method = RequestMethod.GET)
	public String home(Student s, HttpServletRequest req) {
		sDAO.regStudent(s, req);
		sDAO.getAllStudent(req);// 등록후에 학생데이터까지 가져올 수 있으면 좋겠습니다
		return "index";
	}
	
}
