<style type="text/css">
.t2 {
	font-size: 30pt;
}

#t {
	background-color: pink;
	color: lightblue;
}

div {
	border: grey solid 2px;
	width: 300px;
	height: 300px;
}
</style>
<script type="text/javascript" src="jQuery.js"></script>
<script type="text/javascript">
	$(function() {
		//alert('sdf');
		$("#b1").click(function() {
			//alert('sdf');
			// a태그로 이루어진 DOM객체 속 text 바꾸기
			$("a").text("유튜브로");
			// text()의 소괄호 안에 값을 넣지 않으면
			// 기존의 값을 가져오게 됨
			//let t = $("a").text();
			//alert(t);

			// .text()와 비교할 .html()
			// $("a").html("유튜브로");

			// .html() 사용하면 새로운 html요소로 변경할 수 있음!
			// $("a").text("<b>유튜브로<b>"); // <b>를 텍스트로 인식!
			//$("a").html("<b>유튜브로<b>");
		});

		$("#b2").click(function() { // 속성 수정을 누를때
			// alert('asdf');

			$("a").attr("href", "https://www.youtube.com");

			// 이 a태그에 css를 주고 싶은데 a태그가 많다면
			//	id도 부여할 수 있음
			// 기존에 없는 속성도 부여 가능한 .attr
			$("a").attr("id", "t");

			// 속성 지우기
			$("a").removeAttr("class");
		});
		$("#b3").click(function() {
			// alert('asdf');
			
			// $("css선택자") : 있는 것을 선택
			// $("DOM객체") : DOM객체 생성
			// marquee DOM객체 추가하기
			
			let m = $("<marquee></marquee>").text("발렌타인데이 !");
			
			// behavior : 스크롤방식 설정
			//		scroll : 한쪽 방향으로만 진행 (기본값)
			//		alternate : 왕복
			m.attr("behavior", "alternate");
			
			// direction : 스크롤방향 설정														@@@@@@
			//		left(기본값), right, up, down
			m.attr("direction", "right");
			
			// 요소 추가하기
			//	기존 요소의 내부에 추가 - append, prepend
			$("div").append(m);	// 내부 아래로 계속 추가함
			//$("div").prepend(m);	// 내부 위로 적층되서 처음 쌓인게 아래로 밀려남
			
			//	기존 요소의 외부에 추가 - before, after
			//$("div").before(m);	// 외부 아래로 계속 추가함
			//$("div").after(m);	// 외부 위로 적층되서 처음 쌓인건 아래로 밀려남
		});
		
		$("#b4").click(function() {
			// alert('asdf');
			
			// remove() : DOM객체 + 그 하위 요소들을 전부 제거함
			// $("div").remove();	// div 자체를 삭제
			
			// empty() : DOM객체의 하위 요소들을 제거
			// $("div").empty();		// div 내부를 삭제
		});
		$("#btn1").click(function() {
			// alert('asdf');
			let m = $("#m").text();
			let p = $("#p").text();
			//let tr = $("<tr>").text();
			//let ttr = $("</tr>").text();
			let tt = $("<tr></tr>").text("<th></th>");
			let ttm = $("<th></th>").text("m");
			let ttp = $("<tr></tr>").text("p");
			
			let im = $("<th></th>").text(m);
			let ip = $("<th></th>").text(p);
			
			$("tbody").append("<tr>");
			$("tbody").append("im");
			$("tbody").append("ip");
			$("tbody").append("</tr>");
			
		});

	});
</script>
</head>
<body>
	메뉴 : <input id="m"> <p>
	가격 : <input id="p"> <p>
	<button id="btn1">등록</button>	
	<hr>
	<table id="tbl1" border="1">
		<tr id="tr1">
			<th>메뉴명</th>
			<th>가격</th>
		</tr>
	</table>
	<hr>
