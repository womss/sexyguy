<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style type="text/css">
	img {
		position: fixed;
		transition: all 0.5s ease-out;
	}
	
	button {
		position: fixed;
		top: 150px;
	}
	
	#t {
		position: fixed;
		top: -82px;
		transition: all 0.5s ease-out;
	}
</style>
<script type="text/javascript" src="jQuery.js"></script>
<script type="text/javascript">
	$(function() {
		
		// setInterval : JavaScript의 반복 함수
		//				일정한 시간 간격으로 코드를 반복실행
		// setTimeout : 정해진 시간 후에 코드가 한번 실행
		setInterval(() => {
			let x = Math.random() * 500;
			let y = Math.random() * 500;
			$("img").css("top", y + "px");
			$("img").css("left", x + "px");
		}, 500);
		
		
		let b = false;
		$("button").click(function() {
			if (!b) { // 트루값일때
				// attr() : 속성을 가져오거나 추가하는 기능
				$("img").attr("src", "cal.png"); // 계산기
			} else {
				$("img").attr("src", "results.png"); // 아닐때 결과
			}
			b = !b; // 트루 폴수 값 반전
		});
		
		let tVisible = false;
		$("#tHandle").click(function() {
			if (!tVisible) {
				$("#t").css("top", "5px")
			} else {
				$("#t").css("top", "-82px")
				
			}
		});
		

	});
</script>
</head>
<body>
	<img src="cal.png">
	<button>이미지 바꾸기</button>
	<table border="1" id="t">
		<tr>
			<td><a href="https://www.naver.com">네이버로</a></td>
		</tr>
		<tr>
			<td><a href="https://www.youtube.com">유튜브로</a></td>
		</tr>
		<tr>
			<td><a href="https://www.google.com">구글로</a></td>
		</tr>
		<tr>
			<td id="tHandle"> | | | | | | | | </td>
		</tr>
	</table>
</body>
</html>