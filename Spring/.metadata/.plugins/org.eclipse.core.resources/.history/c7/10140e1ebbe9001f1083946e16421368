<script type="text/javascript" src="jQuery.js"></script>
<script type="text/javascript">
	$(function() {
		// $("선택자").css("속성명","값");
		
		// btn1을 누르면 h1의 글자색이 teal,
		//			h1의 배경색이 pink로 바뀌게
		$("#btn1").click(() => {
			$("h1").css("color", "teal");
			$("h1").css("background-color", "pink");
		});
		
		// btn2을 누르면 현재 h1의 글자색을 alert창에 출력!
		$("#btn2").click(() => {
			alert("$("h1").css("color","teal"));
		});
		
		// btn3을 누르면 input에 입력한 값대로 h1의 글자크기가 바뀌도록!
		$("#btn3").click(() => {
			$("h1").css("font-size", "#i"px);
			
		});
		// btn4를 누르면 input의 가로길이를 input에 값으로 출력
		
		
		
		

	
	
	});
</script>
