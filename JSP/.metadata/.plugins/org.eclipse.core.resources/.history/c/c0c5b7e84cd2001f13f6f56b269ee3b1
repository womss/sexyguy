/* 배경이미지 변경 */
#backgroundTbl {
	/* 가운데 정렬 */
	margin-left: auto;
	margin-right: auto;
}

.background-container {
	position:  relative;
	padding: 20px;
	margin-left: auto;
	margin-right: auto;
}

.background-container .background {
	position: fixed;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 100%;
	z-index: -1; /* z축의 값, 요소의 쌓임 순서(z-index)를 제어
					어떤 요소가 다른 요소 위에 나타날지
					or 아래에 위치할지를 결정
					숫자 값이 작아질수록 요소가 더 아래로 배치
					다른 요소가 z-index 값 없이 기본 위치에 있다면,
					z-index: -1; 을 가진 요소는 그 아래로 배치됨
				 */
	transition: background-image 0.5s ease;
	
}

div input[type="radio"] {
	position: absolute;
	opacity: 0;
}
/* 인풋과 연결되어 있어야 함 */
label {
	cursor: pointer;
	margin-right: 10px;
	padding: 10px 20px;
	background-color: #ddd;
	border-radius: 5px;
	transition: background-color 0.3s;
}

label:hover {
	background-color: #ccc;
}

/* 
	id="bg1"인 라디오 버듵이 선택된 상태(#bg1:checked ~)에서
	#bg1 뒤에 나오는 class="background"인 요소에 해당 스타일을 적용해라
 */
#bg1:checked ~ .background {
	background-image: url("pepe.png");
	background-repeat: no-repeat;
	background-position: center;
}

#bg2:checked ~ .background {
	background-image: url("cat.png");
	background-repeat: no-repeat;
	background-position: left;
}















